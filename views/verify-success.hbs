<div class="min-h-screen bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
        <!-- Verification Success Message -->
        <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-8">
            <div class="bg-green-600 text-white text-center py-6">
                <svg class="mx-auto h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <h2 class="text-2xl font-bold mt-2">Certificate Verified Successfully!</h2>
            </div>
            <div class="p-6">
                <div class="text-center text-gray-600 mb-6">
                    This certificate has been verified as authentic and was issued by our system.
                </div>
                
                <!-- Certificate Summary -->
                <div class="bg-gray-50 rounded-lg p-4 mb-6">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Certificate Details:</h3>
                    <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Recipient Name</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{certificate.recipientName}}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Course/Program</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{certificate.courseName}}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Completion Date</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{formatDate certificate.completionDate}}</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-500">Certificate ID</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{certificate.certificateId}}</dd>
                        </div>
                    </dl>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row justify-center gap-4">
                    <a href="/certificates/{{certificate.certificateId}}" 
                       class="inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        View Full Certificate
                    </a>
                    <a href="/certificates/{{certificate.certificateId}}/pdf" 
                       class="inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                        Download PDF
                    </a>
                </div>
            </div>
        </div>

        <!-- Verify Another Certificate -->
        <div class="text-center">
            <a href="/verify" class="text-blue-600 hover:text-blue-800 font-medium">
                ‚Üê Verify Another Certificate
            </a>
        </div>
    </div>
</div> 